// Question 2: Find the greatest number among three numbers

#include <stdio.h>
int main(){

    int num1, num2, num3;

    printf("Enter three numbers.   ");
    scanf("%i %i %i",&num1,&num2,&num3);

    if((num1>num2) & (num1>num3)){
        printf("%i is the greatest number among the three numbers.\n",num1);
    }else if((num2>num1) & (num2>num3)){
        printf("%i is the greatest number among the three numbers.\n",num2);

    }else if((num3>num1) &( num3>num2)){
        printf("%i is the greatest number among the three numbers.\n",num3);
    }else{
        printf("There is no greatest number among the three given numbers.\n");
    }
    return 0;
}
